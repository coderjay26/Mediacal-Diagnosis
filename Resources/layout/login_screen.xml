<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="2">

        <TextView
            android:id="@+id/welcome_bac"
            android:layout_width="match_parent"
            android:text="@string/welcome_bac"
            android:gravity="center_horizontal"
            android:textAppearance="@style/welcome_bac"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_to_"
            android:gravity="center_horizontal"
            android:textAppearance="@style/sign_in_to_"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:minWidth="25px"
        android:minHeight="25px"
        android:paddingHorizontal="@dimen/diH">
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailLogin"
            android:hint="@string/enter_email"
            android:background="@drawable/login"
            android:paddingHorizontal="@dimen/diH"
            android:layout_marginBottom="@dimen/diH"
            android:fontFamily="@font/montserrat_regular"
            android:drawableRight="@drawable/email_24"
            android:drawableTint="@android:color/darker_gray" />

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordLogin"
            android:hint="@string/pass"
            android:background="@drawable/login"
            android:paddingHorizontal="@dimen/diH"
            android:layout_marginBottom="@dimen/diH"
            android:fontFamily="@font/montserrat_regular"
            android:drawableRight="@drawable/lock_30"
            android:drawableTint="@android:color/darker_gray" 
            />
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/linearLayout3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/linearLayout3">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remember_me"
                    android:textAppearance="@style/small"
                    android:id="@+id/checkBox2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:id="@+id/linearLayout4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/small_blue"
                    android:text="@string/forgot_pass"
                    android:id="@+id/textView2" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingBottom="@dimen/diH">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:gravity="center"
                android:background="@drawable/btn_background"
                android:padding="@dimen/diV"
                android:textAppearance="@style/button"
                android:text="@string/login"
                android:textAllCaps="false"
                android:drawableRight="@drawable/navigate_next"
                android:drawableTint="#ffffff"
                android:enabled="false" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/diH"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/medium"
                    android:text="@string/new_member"
                    android:layout_marginRight="5sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_now"
                    android:textAppearance="@style/medium_blue"
                    android:text="@string/regis_now"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
